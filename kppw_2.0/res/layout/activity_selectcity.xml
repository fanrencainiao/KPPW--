<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3" >

    <RelativeLayout
        android:id="@+id/layhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_bg" >

        <include
            android:id="@+id/heaher_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_lay"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/layhead"
        android:padding="10dip" >

        <EditText
            android:id="@+id/sh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawablePadding="10dp"
            android:hint="请输入城市名称"
            android:padding="10dip"
            android:textColor="#515151"
            android:textSize="13dp" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gps_city_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_lay" >

        <TextView
            android:id="@+id/alpha"
            android:layout_width="fill_parent"
            android:layout_height="25dip"
            android:background="#B7B7B7"
            android:paddingBottom="2dip"
            android:paddingLeft="13dip"
            android:paddingTop="2dip"
            android:textColor="#515151"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lng_city_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alpha"
            android:padding="10dip" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/dingwei_city" />

            <TextView
                android:id="@+id/lng_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/ic_jx"
                android:gravity="center"
                android:text="@string/dingwei_now"
                android:textColor="#515151" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gps_city_lay"
        android:cacheColorHint="#00000000"
        android:scrollbars="none" />

    <com.kekezu.kppw.baidulbs.MyLetterListView
        android:id="@+id/MyLetterListView01"
        android:layout_width="30dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gps_city_lay" />

</RelativeLayout>