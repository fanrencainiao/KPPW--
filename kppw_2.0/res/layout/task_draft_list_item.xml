<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp" >

        <ImageView
            android:id="@+id/image_index_item_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_hoem_rmfw" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="互联网公司网站主页设计征集主页设集主页设" />

            <LinearLayout
                android:id="@+id/text_index_item_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="64dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_issue_bott"
                    android:gravity="center"
                    android:text="网页设计"
                    android:textColor="@color/header_bg" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="64dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/ic_issue_bott"
                    android:gravity="center"
                    android:text="App开发"
                    android:textColor="@color/header_bg" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="64dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_issue_bott"
                    android:gravity="center"
                    android:text="PHP开发"
                    android:textColor="@color/header_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_issue_person" />

                <TextView
                    android:id="@+id/text_index_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="设置中标人数："
                    android:textColor="@color/light_gray5" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="5"
                    android:textColor="@color/index_list_item" />

                <TextView
                    android:id="@+id/text_index_item_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/index_list_item" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/light_gray6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_money"
            android:textColor="@color/index_list_item" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.1"
            android:text="5000"
            android:textColor="@color/index_list_item" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="截止日期" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-6-6" />

    </LinearLayout>

</LinearLayout>