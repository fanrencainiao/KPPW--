<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/heaher_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_light" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:layout_weight="0.31"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_photo_photo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="老毛挑拉皮条工作室"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="71dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="7dp" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/cert1_gray" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/cert2_gray" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/cert3_gray" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/cert4_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_good"
                            android:textColor="@color/light_gray8"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_applauseRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88%"
                            android:textColor="@color/hot_server"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="@string/task_count"
                            android:textColor="@color/light_gray8"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88"
                            android:textColor="@color/hot_server"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/light_gray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/manuscript_content" />

                <TextView
                    android:id="@+id/text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="9dp"
                    android:text="1.阿迪激发惊神破胆交付； 是复读机了付款 阿道\n2.的阿斯蒂芬请我热风枪人工桡骨头25过热器撒" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="附件：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <ImageView
                    android:id="@+id/ImageView2"
                    android:layout_width="31dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_photo_image" />

                <ImageView
                    android:id="@+id/imageView3123"
                    android:layout_width="31dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_photo_image" />

                <ImageView
                    android:id="@+id/imageView4r3"
                    android:layout_width="31dp"
                    android:layout_height="39dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_photo_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报"
                    android:textColor="@color/button_blue" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="回复"
                    android:textColor="@color/button_blue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_handle"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView0111"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray2" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_task_collection"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_sc_normal" />

                <TextView
                    android:id="@+id/TextView0sa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="店铺"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView122"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_shop_call" />

                <TextView
                    android:id="@+id/textView1s1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="联系"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_task_tougao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/button_blue"
                android:gravity="center"
                android:text="选TA"
                android:textColor="@color/main_bg"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>