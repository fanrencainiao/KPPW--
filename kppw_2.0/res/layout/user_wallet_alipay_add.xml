<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/heaher_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_bank_1"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_margin="8dp"
                android:background="@drawable/ic_alipay_bg" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/ic_alipay_alipay" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@+id/ImageView01"
                    android:text="支付宝名称"
                    android:textColor="@color/main_bg" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/ImageView01"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="14dp"
                    android:text="支付宝账号"
                    android:textColor="@color/main_bg" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:ems="10" />

                <EditText
                    android:id="@+id/edit_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignLeft="@+id/edit_name"
                    android:layout_marginRight="16dp"
                    android:ems="10" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="26dp"
                    android:text="确认账号"
                    android:textColor="@color/main_bg" />

                <EditText
                    android:id="@+id/edit_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/edit_account"
                    android:layout_marginRight="16dp"
                    android:ems="10" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_label" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/certification_hint"
                android:textColor="@color/light_gray8" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_add_alipay"
        android:layout_width="match_parent"
        android:background="@color/header_bg"
        android:gravity="center"
        android:layout_height="48dp"
        android:text="@string/alipay_auto"
        android:textColor="@color/main_bg" />

</LinearLayout>